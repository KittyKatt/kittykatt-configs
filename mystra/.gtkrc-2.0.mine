gtk-can-change-accels=1		# Shortcuts



################
# Scrollbars
################
style "scrollbar"
{
        GtkScrollbar::min-slider-length = 12

        GtkScrollbar::has-backward-stepper = 0
        GtkScrollbar::has-forward-stepper = 0
